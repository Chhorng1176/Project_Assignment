# ===============================
# FLASK
# ===============================
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=super-secret-key-change-me

# ===============================
# DATABASE (PostgreSQL)
# ===============================
DB_TYPE=postgresql
DB_DRIVER=psycopg2

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=AssExpertsystem
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123

# âœ… SQLAlchemy connection string (USE THIS ONLY)
DATABASE_URL=postgresql+psycopg2://postgres:123@localhost:5432/AssExpertsystem

# ===============================
# SQLALCHEMY
# ===============================
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False

# ===============================
# SECURITY
# ===============================
PASSWORD_HASH_METHOD=pbkdf2:sha256
TOKEN_EXPIRE_MINUTES=60

# ===============================
# FILE UPLOADS
# ===============================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# ===============================
# LOGGING
# ===============================
LOG_LEVEL=INFO
